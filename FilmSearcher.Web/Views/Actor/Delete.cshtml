@model Actor

@{
    ViewData["Title"] = "Delete actor";
}

<form asp-controller="Actor" asp-action="Delete" method="post">
    <label>PictureURL</label>
    <input asp-for="ProfilePictureURL" type="text" />
    <label>FullName</label>
    <input asp-for="FullName" type="text" />
    <label>Bio</label>
    <input asp-for="Bio" type="text" />
    <input type="submit" value="Delete" />
    <a asp-controller="Actor" asp-action="Actors">Show all</a>
</form>
